<!DOCTYPE html>
<html>

<head>
    <title>Carrinho de Compras</title>
    <style>
        .nav {
            margin-bottom: 20px;
        }

        .nav a {
            margin-right: 15px;
            text-decoration: none;
            color: #007bff;
        }

        .carrinho-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .carrinho-item {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .item-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 4px;
        }

        .item-info {
            flex-grow: 1;
        }

        .item-nome {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .item-preco {
            color: #666;
        }

        .item-quantidade {
            font-size: 14px;
        }

        .item-subtotal {
            font-weight: bold;
            color: #28a745;
        }

        .item-actions {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .btn-remove {
            background: #dc3545;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
        }

        .carrinho-total {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            margin-top: 20px;
        }

        .total-valor {
            font-size: 24px;
            font-weight: bold;
            color: #28a745;
        }

        .carrinho-actions {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin: 0 10px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: #007bff;
            color: white;
        }

        .btn-danger {
            background: #dc3545;
            color: white;
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .carrinho-vazio {
            text-align: center;
            padding: 40px;
            color: #666;
        }
    </style>
</head>

<body>
    <div class="nav">
        <a href="/products">Produtos</a>
        <a href="/pedidos">Pedidos</a>
        <a href="/carrinho">Carrinho</a>
    </div>

    <div class="carrinho-container">
        <h1>Carrinho de Compras</h1>

        <% if (itens.length===0) { %>
            <div class="carrinho-vazio">
                <h3>Seu carrinho está vazio</h3>
                <p>Adicione alguns produtos para começar suas compras!</p>
                <a href="/products" class="btn btn-primary">Continuar Comprando</a>
            </div>
            <% } else { %>
                <% itens.forEach(item=> { %>
                    <div class="carrinho-item">
                        <% if (item.produto_image) { %>
                            <img src="<%= item.produto_image %>" alt="<%= item.produto_nome %>" class="item-image">
                            <% } %>

                                <div class="item-info">
                                    <div class="item-nome">
                                        <%= item.produto_nome %>
                                    </div>
                                    <div class="item-preco">R$ <%= item.produto_preco.toFixed(2) %>
                                    </div>
                                    <div class="item-quantidade">Quantidade: <%= item.quantidade %>
                                    </div>
                                </div>

                                <div class="item-subtotal">
                                    R$ <%= item.subtotal.toFixed(2) %>
                                </div>

                                <div class="item-actions">
                                    <form method="post" action="/carrinho/remove/<%= item.id %>">
                                        <button type="submit" class="btn-remove"
                                            onclick="return confirm('Remover este item do carrinho?')">
                                            Remover
                                        </button>
                                    </form>
                                </div>
                    </div>
                    <% }) %>

                        <div class="carrinho-total">
                            <h3>Total do Carrinho</h3>
                            <div class="total-valor">R$ <%= total.toFixed(2) %>
                            </div>
                        </div>

                        <div class="carrinho-actions">
                            <a href="/products" class="btn btn-secondary">Continuar Comprando</a>
                            <form method="post" action="/carrinho/clear" style="display: inline;">
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Limpar todo o carrinho?')">
                                    Limpar Carrinho
                                </button>
                            </form>
                            <button class="btn btn-primary" disabled>Finalizar Compra (Em breve)</button>
                        </div>
                        <% } %>
    </div>
</body>

</html>